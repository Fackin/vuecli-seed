$primaryColor = #ff00ff;

// 按钮 button
#app .el-button--text {
  color: $primaryColor;
}

#app .el-button--default {
  background: none;
  border-color: #D8DFE5;
  opacity: 1;
}
#app .el-button--default:hover {
  border-color: $primaryColor;
  opacity: 0.7;
  color: $primaryColor;
}
#app .el-button--default:active {
  border-color: $primaryColor;
  opacity: 1;
  color: $primaryColor;
}
#app .el-button--primary {
  background: $primaryColor;
  border-color: $primaryColor;
}
#app .el-button--primary,
#app .el-button--primary span,
#app .el-button--primary i, {
  color: #fff;
}
#app .el-button--primary:hover {
  opacity: 0.7;
}
#app .el-button--primary:active {
  opacity: 1;
}
#app .button_group {
  overflow: hidden;
}
#app .button_group .el-button {
  float: left;
}
#app .el-button {
  padding: 6px 21px;
  height: 30px;
  font-weight: 400;
  margin-right: 5px;
  // margin-bottom: 10px;
}
#app .el-button--text {
  padding-left: 5px;
  padding-right: 5px;
  margin: 0; 
}
#app .el-button--text span {
  color: $primaryColor;
}